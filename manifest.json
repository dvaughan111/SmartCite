{
  "manifest_version": 3,
  "name": "SmartCite",
  "version": "0.1",
  "description": "One-click citations that actually work",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
